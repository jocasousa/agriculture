                  <Tooltip />
                  <Legend />
                </PieChart>
              </ResponsiveContainer>
            </ChartBlock>

            <ChartBlock>
              <h3>Por Cultura</h3>
              <ResponsiveContainer>
                <PieChart>
                  <Pie data={byCrop} dataKey="value" nameKey="name" outerRadius={100} label>
                    {byCrop.map((entry, idx) => (
                      <Cell key={entry.name} fill={chartColors[idx % chartColors.length]} />
                    ))}
                  </Pie>
                  <Tooltip />
                  <Legend />
                </PieChart>
              </ResponsiveContainer>
            </ChartBlock>

            <ChartBlock>
              <h3>Uso do Solo</h3>
              <ResponsiveContainer>
                <PieChart>
