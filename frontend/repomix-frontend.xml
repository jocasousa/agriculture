  const [summary, setSummary] = useState<Summary>({ totalFarms: 0, totalArea: 0 });
  const [byState, setByState] = useState<StateData[]>([]);
  const [byCrop, setByCrop] = useState<CropData[]>([]);
  const [byLandUse, setByLandUse] = useState<LandUseData[]>([]);

